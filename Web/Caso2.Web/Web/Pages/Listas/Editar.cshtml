@page
@model Web.Pages.Listas.EditarModel
@{
    ViewData["Title"] = "Editar Lista";
}

<div class="edit-container">
    <div class="edit-header">
        <h2>Editar Lista</h2>
        <p>Modifique los datos de esta lista</p>
    </div>

    <form method="post" class="edit-form">
        <input type="hidden" asp-for="Lista.ID" />

        <div class="form-group">
            <label asp-for="Lista.UsuarioID" class="form-label">Usuario ID</label>
            <input asp-for="Lista.UsuarioID" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Lista.TMDB_ID" class="form-label">TMDB ID</label>
            <input asp-for="Lista.TMDB_ID" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Lista.Tipo" class="form-label">Tipo</label>
            <input asp-for="Lista.Tipo" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Lista.Prioridad" class="form-label">Prioridad</label>
            <input asp-for="Lista.Prioridad" class="form-control" type="number" step="0.1" min="0" max="10" />
            <span asp-validation-for="Lista.Prioridad" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Lista.Comentario" class="form-label">Comentario</label>
            <textarea asp-for="Lista.Comentario" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Lista.Comentario" class="validation-message"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="submit-btn">Actualizar</button>
            <a asp-page="/Listas/Index" class="cancel-btn">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
