@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="hero-section">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h1 class="hero-title">🎬 Bienvenido a tu gestor de películas y series 📺</h1>
            <p class="hero-subtitle">Organiza, descubre y disfruta de tu contenido favorito</p>
        </div>

        <div class="dashboard-grid">
            <div class="dashboard-card">
                <a asp-page="/Usuarios/Index" class="dashboard-btn primary-btn">
                    <span class="btn-icon">👤</span>
                    <span class="btn-text">Usuarios</span>
                </a>
            </div>
            <div class="dashboard-card">
                <a asp-page="/Peliculas/Index" class="dashboard-btn accent-btn">
                    <span class="btn-icon">🎞️</span>
                    <span class="btn-text">TMDB</span>
                </a>
            </div>
            <div class="dashboard-card">
                <a asp-page="/Favoritos/Index" class="dashboard-btn primary-btn">
                    <span class="btn-icon">❤️</span>
                    <span class="btn-text">Favoritos</span>
                </a>
            </div>
            <div class="dashboard-card">
                <a asp-page="/Listas/Index" class="dashboard-btn accent-btn">
                    <span class="btn-icon">📋</span>
                    <span class="btn-text">Listas</span>
                </a>
            </div>
        </div>
    </div>
</div>